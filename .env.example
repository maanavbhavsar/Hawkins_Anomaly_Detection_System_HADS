# =============================================================================
# HAWKINS LAB — Environment configuration
# Copy to .env and fill in your AWS and Datadog keys. See README.md for setup.
# =============================================================================

# --- AWS (required for Bedrock AI explanations) ---
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# Optional: set only for temporary/short-term credentials (e.g. SSO, assumed role)
# AWS_SESSION_TOKEN=your_session_token_here
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-opus-4-6-v1

# --- Datadog (required for metrics & alerts) ---
DD_API_KEY=your_datadog_api_key
DD_APP_KEY=your_datadog_app_key
DD_SITE=datadoghq.com
# Optional: embed URLs from Datadog Share → Embed (allowlist referrer e.g. http://localhost:8501)
# DD_EMBED_LAB_SENSORS=https://p.datadoghq.com/sb/embed/bfdb63b2-0c07-11f1-831f-929eff2735cf-f78f691e60991913f7b34a4dc044b50a
# DD_EMBED_BREACH_LEVEL=https://p.datadoghq.com/sb/embed/bfdb63b2-0c07-11f1-831f-929eff2735cf-a96aa6b105a2d4e0d4c06c3356c7ae40
# DD_EMBED_ANOMALY_EVENTS=https://p.datadoghq.com/sb/embed/bfdb63b2-0c07-11f1-831f-929eff2735cf-fd7e0c5488bcba70196a198d717dc6bc

# --- MiniMax (optional voice alerts) ---
MINIMAX_API_KEY=your_minimax_api_key
ENABLE_VOICE_ALERT=true

# --- Application ---
SENSOR_ID=HAWKINS-LAB-001
LOCATION=main_lab
POLLING_INTERVAL=5.0
ENABLE_BEDROCK=true
ENABLE_DATADOG=true
